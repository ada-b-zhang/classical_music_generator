{
    "name": "bacprop",
    "version": "1.0.0",
    "author": {
        "name": "bacprop",
        "email": "contact@bacprop.com"
    },
    "description": "MCP Client for MLOps",
    "main": "dist/main/main.js",
    "type": "module",
    "scripts": {
        "start": "npm run build && electron ./dist/main/main.js",
        "build": "tsc && copyfiles -u 1 src/**/* -e src/**/*.ts dist",
        "build-app": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.aiql.chat-mcp",
        "directories": {
            "output": "artifacts"
        },
        "files": [
            "**/*"
        ],
        "extraFiles": [
            {
                "from": "./src/main/config.json",
                "to": "."
            },
            {
                "from": "../server/main.py",
                "to": "MCP/main.py"
            },
            {
                "from": "../server/requirements.txt",
                "to": "MCP/requirements.txt"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "icon.icns"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "icon": "icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "devDependencies": {
        "@types/node-notifier": "^8.0.5",
        "copyfiles": "^2.4.1",
        "electron": "^35.1.5",
        "electron-builder": "^25.1.8",
        "electron-debug": "^4.1.0",
        "node-notifier": "^10.0.1",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.9.0",
        "electron-log": "^5.4.0"
    }
}
